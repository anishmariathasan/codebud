{
    "name": "codebud",
    "displayName": "CodeBud - AI Voice Pair Programmer",
    "description": "An AI-powered voice pair programming assistant for VS Code",
    "version": "0.1.0",
    "publisher": "codebud",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/your-username/codebud"
    },
    "icon": "media/icon.png",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other",
        "Machine Learning"
    ],
    "keywords": [
        "ai",
        "voice",
        "pair programming",
        "assistant",
        "elevenlabs"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "codebud.openUI",
                "title": "CodeBud: Open Voice UI (Browser)"
            },
            {
                "command": "codebud.openVoicePanel",
                "title": "CodeBud: Open Voice Panel",
                "icon": "$(mic)"
            },
            {
                "command": "codebud.toggleMode",
                "title": "CodeBud: Toggle Driver/Navigator Mode"
            },
            {
                "command": "codebud.setNavigator",
                "title": "CodeBud: Switch to Navigator Mode"
            },
            {
                "command": "codebud.setDriver",
                "title": "CodeBud: Switch to Driver Mode"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "codebud",
                    "title": "CodeBud",
                    "icon": "$(mic)"
                }
            ]
        },
        "views": {
            "codebud": [
                {
                    "type": "webview",
                    "id": "codebud.voiceUI",
                    "name": "Voice Assistant"
                }
            ]
        },
        "keybindings": [
            {
                "command": "codebud.openUI",
                "key": "ctrl+shift+b",
                "mac": "cmd+shift+b"
            },
            {
                "command": "codebud.toggleMode",
                "key": "ctrl+shift+m",
                "mac": "cmd+shift+m"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "node esbuild.js --production",
        "watch": "node esbuild.js --watch",
        "pretest": "npm run compile",
        "lint": "eslint src --ext ts",
        "package": "npm run compile && npx vsce package --no-dependencies",
        "publish": "npm run compile && npx vsce publish --no-dependencies"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.18.2"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.0",
        "@types/vscode": "^1.85.0",
        "@vscode/vsce": "^2.22.0",
        "esbuild": "^0.27.2",
        "typescript": "^5.3.0"
    }
}